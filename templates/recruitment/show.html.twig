{% extends 'base.html.twig' %}

{% block title %}Recruitment{% endblock %}

{% block body %}
    <h1>Recruitment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recruitment.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recruitment.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ recruitment.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ recruitment.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ recruitment.phoneNumber }}</td>
            </tr>
            <tr>
                <th>ExpectedSalary</th>
                <td>{{ recruitment.expectedSalary }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ recruitment.position }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ recruitment.level }}</td>
            </tr>
            <tr>
                <th>Displayed</th>
                <td>{{ recruitment.displayed ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recruitment_index') }}">back to list</a>
{% endblock %}
